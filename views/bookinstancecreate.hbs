<html>

<body>
    <form action="create/submit" method="post">

        <label>select name of the book</label>
        <select name="book"><br><br>
            {{#each tname}}
            <option value={{this._id}}>{{this.title}}</option>
            {{/each}}

        </select><br><br><br>



        <label>enter imprint of the book</label>
        <input type="text" name="imprint" placeholder="book imprint"><br><br>
        <label>enter the status of the book</label>


        <select name="status">
            <option value="available">maintainance</option>
            <option value="maintainance">available</option>
            <option value="loaned">loaned</option>
            <option value="rerserved">reserved</option>
        </select><br><br>
        <label>enter the due date</label>
        <input type="date" name="due_back" placeholder="date"><br><br>

        <input type="submit">
    </form>
</body>

</html>